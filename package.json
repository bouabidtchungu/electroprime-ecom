{
  "name": "electroprime-ecom-platform",
  "version": "1.0.0",
  "description": "Professional E-commerce platform for electronic devices, built with React and Tailwind CSS.",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node --import tsx server/index.ts",
    "dev": "cross-env NODE_ENV=development node --import tsx server/index.ts --watch",
    "build": "cross-env CI=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tailwind:build": "tailwindcss build -i src/styles/tailwind.css -o src/styles/main.css",
    "audit:fix": "npm audit fix --force"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "ajv": "^8.6.0",
    "algoliasearch": "^4.20.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^10.18.0",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/multer": "^1.4.11",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "react-scripts": "5.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-dev-middleware": "^7.0.0",
    "webpack-hot-middleware": "^2.25.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
